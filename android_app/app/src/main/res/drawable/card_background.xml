<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light gray for pressed state -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White for default state -->
            <corners android:radius="8dp" />
            <stroke android:color="#0055A5" android:width="2dp" /> <!-- Dark blue border -->
        </shape>
    </item>
</selector>
